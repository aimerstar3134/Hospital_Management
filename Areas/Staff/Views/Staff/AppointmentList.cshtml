@model IEnumerable<Hospital_Management.Areas.Patient.Models.AppoinmnetModel>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
@{
    ViewData["Title"] = "AppointmentList - Staff";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>AppointmentList</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appoinment_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timeperiod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.STime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ETime)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Appoinment_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timeperiod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ETime)
            </td>
            <td>
                    <a asp-action="EditAppointment" asp-controller="Staff" asp-route-id="@item.Appoinment_Id">Edit</a> |
                    <a asp-action="AppointmentDetails" asp-controller="Staff">Details</a> |
                    @* <a asp-action="DeleteAppointment" asp-controller="Staff" asp-route-id="@item.Appoinment_Id">Delete</a> *@
                </td>
        </tr>
}
    </tbody>
</table>
