@model Hospital_Management.Areas.Patient.Models.TestReports
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
@{
    ViewData["Title"] = "AddTestReport";
}

<h1>Add Test Report</h1>
<style>
    h1 {
        margin-top:10px;
        margin-bottom: 20px;
        margin-left: 20px;
    }

    .form-group {
        margin-bottom: 20px;
        margin-left:30px;
    }

    label {
        font-weight: bold;
        
    }

    input[type="date"] {
        width: 100%;
    }

    input[type="submit"] {
        width: 100%;
    }
    a{
        margin-left: 30px;
    }
    
</style>

<div class="row">

    <div class="col-md-6">
        <form asp-action="AddTestReport">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">User ID:</label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorName" class="control-label">Doctor Name:</label>
                <input asp-for="DoctorName" class="form-control" />
                <span asp-validation-for="DoctorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestCategory" class="control-label">Test Category:</label>
                <select asp-for="TestCategory" class="form-control">
                    <option value="">Select Test Category</option>
                    <option value="Blood Test">Blood Test</option>
                    <option value="Urine Test">Urine Test</option>
                    <option value="X-Ray">X-Ray</option>
                    <!-- Add more options as needed -->
                </select>
                <span asp-validation-for="TestCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestDate" class="control-label">Test Date:</label>
                <input asp-for="TestDate" class="form-control" type="date" />
                <span asp-validation-for="TestDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestResult" class="control-label">Test Result:</label>
                <input asp-for="TestResult" class="form-control" />
                <span asp-validation-for="TestResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="StaffDashboard">Back to Dashboard</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
