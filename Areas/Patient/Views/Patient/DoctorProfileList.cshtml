@model IEnumerable<Hospital_Management.Areas.Doctor.Models.DoctorModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Doctor Profiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
<style>
    * {
        box-sizing: inherit;
    }

    img {
        max-width: 100%;
        height: auto;
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        font-family: 'Montserrat', sans-serif;
    }

    ul {
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        gap: 3rem;
    }

    li {
        list-style-type: none;
        position: relative;
        padding: 0.625rem 0 0.5rem;
    }

        li ul {
            flex-direction: column;
            position: absolute;
            background-color: white;
            align-items: flex-start;
            transition: all 0.5s ease;
            width: 20rem;
            right: -3rem;
            top: 4.5rem;
            border-radius: 0.325rem;
            gap: 0;
            padding: 1rem 0rem;
            opacity: 0;
            box-shadow: 0px 0px 100px rgba(20, 18, 18, 0.25);
            display: none;
        }

    ul li:hover > ul, ul li ul:hover {
        visibility: visible;
        opacity: 1;
        display: flex;
    }

    .material-icons-outlined {
        color: #888888;
        transition: all 0.3s ease-out;
    }

        .material-icons-outlined:hover {
            color: #ff9800;
            transform: scale(1.25) translateY(-4px);
            cursor: pointer;
        }

    .profile-icon {
        font-size: 35px;
        cursor: pointer;
        margin-left: 1100px;
    }

    .sub-item {
        width: 100%;
        display: flex;
        align-items: center;
        gap: 0.725rem;
        cursor: pointer;
        padding: 0.5rem 1.5rem;
    }

        .sub-item:hover {
            background-color: rgba(232, 232, 232, 0.4);
        }

            .sub-item:hover .material-icons-outlined {
                color: #ff9800;
                transform: scale(1.08) translateY(-2px);
                cursor: pointer;
            }

            .sub-item:hover p {
                color: #000;
                cursor: pointer;
            }

        .sub-item p {
            font-size: 0.85rem;
            color: #888888;
            font-weight: 500;
            margin: 0.4rem 0;
            flex: 1;
        }

    .title {
        display: flex;
        flex-direction: column;
    }

    /* Back button */
    .back-button {
        display: inline-flex;
        align-items: center;
        margin-bottom: 20px;
        text-decoration: none;
        color: #007bff;
        transition: color 0.2s ease;
    }

        .back-button:hover {
            color: #0056b3;
        }

        .back-button .material-icons-outlined {
            font-size: 24px;
            margin-right: 8px;
        }

        .back-button span {
            font-size: 1rem;
            font-weight: 500;
        }

</style>
<nav>
    <ul>
        <li>
            <span class="material-icons-outlined profile-icon" id="profileIcon">person</span>
            <ul>
                @* <li class="sub-item"><span class="material-icons-outlined">grid_view</span><a asp-action="DoctorList" asp-controller="Doctor" asp-area="Doctor" asp-route-id="@ViewBag.User_Id"><p>Dashboard</p></a></li> *@
                <li class="sub-item"><span class="material-icons-outlined">manage_accounts</span><a asp-action="EditDoctorProfile" asp-controller="Doctor" asp-area="Doctor" asp-route-id="@ViewBag.User_Id"><p>Update Profile</p></a></li>
                <li class="sub-item"><span class="material-icons-outlined">refresh</span><a asp-action="resetpassword" asp-controller="Doctor" asp-area="Doctor"><p>Reset Password</p></a></li>
                <li class="sub-item"><span class="material-icons-outlined">logout</span><a asp-action="Logout" asp-controller="User"><p>Logout</p></a></li>
            </ul>
        </li>
    </ul>
</nav>
<div class="container mt-5">
    <h1 class="text-center mb-4">Doctor Profiles</h1>
    <a href="@Url.Action("PatientDashboard", "Patient")" class="back-button">
        <span class="material-icons-outlined">arrow_back</span>
        <span>Back</span>
    </a>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="input-group mb-3">
                <input type="date" class="form-control" id="datepicker">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button" id="showButton">Show Available Time</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row" id="doctorCards">
        <!-- Doctor profiles will be dynamically added here -->
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#showButton').click(function () {
                var selectedDate = $('#datepicker').val();
                $.ajax({
                    url: '/Doctor/GetAvailableTime',
                    type: 'GET',
                    data: { date: selectedDate },
                    success: function (response) {
                        $('#doctorCards').empty();
                        if (response.length > 0) {
                            var doctors = {};
                            $.each(response, function (index, item) {
                                if (!doctors[item.user_Id]) {
                                    doctors[item.user_Id] = {
                                        name: item.name,
                                        designation: item.designation,
                                        phone: item.phone,
                                        gender: item.gender,
                                        availableTimes: []
                                    };
                                }
                                doctors[item.user_Id].availableTimes.push({
                                    startTime: item.availableStartTime ? item.availableStartTime : 'N/A',
                                    endTime: item.availableEndTime ? item.availableEndTime : 'N/A'
                                });
                            });

                            $.each(doctors, function (index, doctor) {
                                var card = `<div class="col-md-4 mb-4">
                                            <div class="card shadow">
                                                <div class="card-body">
                                                    <h5 class="card-title">${doctor.name}</h5>
                                                    <p class="card-text">Designation: ${doctor.designation}</p>
                                                    <p class="card-text">Date: ${selectedDate}</p>
                                                    <p class="card-text">Available Times:</p>
                                                    <ul>`;
                                $.each(doctor.availableTimes, function (index, time) {
                                    card += `<li>${time.startTime} - ${time.endTime}</li>`;
                                });
                                card += `</ul>
                                        <p class="card-text">Phone: ${doctor.phone}</p>
                                        <p class="card-text">Gender: ${doctor.gender}</p>
                                        <a href="/Patient/Patient/AddAppoinment?id=${index}" class="btn btn-primary">Add Appointment</a>
                                    </div>
                                </div>
                            </div>`;
                                $('#doctorCards').append(card);
                            });
                        } else {
                            var message = '<div class="col-md-12 text-center">No doctors available on the selected date.</div>';
                            $('#doctorCards').append(message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                    }
                });
            });
        });
    </script>
}
