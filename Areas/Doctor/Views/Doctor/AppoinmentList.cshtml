@model IEnumerable<Hospital_Management.Areas.Patient.Models.AppoinmnetModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Appointment List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
<style>
    * {
        box-sizing: inherit;
    }

    img {
        max-width: 100%;
        height: auto;
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        font-family: 'Montserrat', sans-serif;
    }

    ul {
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        gap: 3rem;
    }

    li {
        list-style-type: none;
        position: relative;
        padding: 0.625rem 0 0.5rem;
    }

    li ul {
        flex-direction: column;
        position: absolute;
        background-color: white;
        align-items: flex-start;
        transition: all 0.5s ease;
        width: 20rem;
        right: -3rem;
        top: 4.5rem;
        border-radius: 0.325rem;
        gap: 0;
        padding: 1rem 0rem;
        opacity: 0;
        box-shadow: 0px 0px 100px rgba(20, 18, 18, 0.25);
        display: none;
    }

    ul li:hover > ul, ul li ul:hover {
        visibility: visible;
        opacity: 1;
        display: flex;
    }

    .material-icons-outlined {
        color: #888888;
        transition: all 0.3s ease-out;
    }

    .material-icons-outlined:hover {
        color: #ff9800;
        transform: scale(1.25) translateY(-4px);
        cursor: pointer;
    }

    .profile-icon {
        font-size: 35px;
        cursor: pointer;
        margin-left: auto;
    }

    .sub-item {
        width: 100%;
        display: flex;
        align-items: center;
        gap: 0.725rem;
        cursor: pointer;
        padding: 0.5rem 1.5rem;
    }

    .sub-item:hover {
        background-color: rgba(232, 232, 232, 0.4);
    }

    .sub-item:hover .material-icons-outlined {
        color: #ff9800;
        transform: scale(1.08) translateY(-2px);
        cursor: pointer;
    }

    .sub-item:hover p {
        color: #000;
        cursor: pointer;
    }

    .sub-item p {
        font-size: 0.85rem;
        color: #888888;
        font-weight: 500;
        margin: 0.4rem 0;
        flex: 1;
    }

    .title {
        display: flex;
        flex-direction: column;
    }

    /* Back button */
    .back-button {
        display: inline-flex;
        align-items: center;
        margin-bottom: 20px;
        text-decoration: none;
        color: #007bff;
        transition: color 0.2s ease;
    }

        .back-button:hover {
            color: #0056b3;
        }

        .back-button .material-icons-outlined {
            font-size: 24px;
            margin-right: 8px;
        }

        .back-button span {
            font-size: 1rem;
            font-weight: 500;
        }

</style>
<nav>
    <div class="title">
        <h1 class="text-center mb-4">Appointment List</h1>
        <br />
        <h4><b>Welcome,</b> @Context.Session.GetString("name")</h4>
    </div>
    <ul>
        <li>
            <span class="material-icons-outlined profile-icon" id="profileIcon">person</span>
            <ul>
                <li class="sub-item"><span class="material-icons-outlined">manage_accounts</span><a asp-action="EditDoctorProfile" asp-controller="Doctor" asp-area="Doctor" asp-route-id="@ViewBag.User_Id"><p>Update Profile</p></a></li>
                <li class="sub-item"><span class="material-icons-outlined">refresh</span><a asp-action="resetpassword" asp-controller="Doctor" asp-area="Doctor"><p>Reset Password</p></a></li>
                <li class="sub-item"><span class="material-icons-outlined">logout</span><a asp-action="Logout" asp-controller="User"><p>Logout</p></a></li>
            </ul>
        </li>
    </ul>
</nav>
<a href="@Url.Action("DoctorList", "Doctor")" class="back-button">
    <span class="material-icons-outlined">arrow_back</span>
    <span>Back</span>
</a>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Patient Name</th>
                            <th>Doctor Name</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in Model)
                        {
                            <tr>
                                <td>@Html.ActionLink(appointment.Patient_Name, "Details", "Patient", new { area = "Patient", id = appointment.Appoinment_Id, name = appointment.Patient_Name, isDone = false }, null)</td>
                                <td>@appointment.Doctor_Name</td>
                                <td>@appointment.Date</td>
                                <td>@appointment.STime - @appointment.ETime</td>
                                <td>@if (appointment.IsDone)
                                    {
                                        <span class="badge badge-success">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Pending</span>
                                    }</td>
                                <td>
                                    @if (!appointment.IsDone)
                                    {
                                        <button class="btn btn-outline-dark done-btn" data-appointment-id="@appointment.Appoinment_Id">Done</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            $('.done-btn').each(function () {
                var button = $(this);
                var appointmentId = button.data('appointment-id');
                // Make an AJAX call to get the IsDone status for each appointment
                $.get('/Patient/GetDoneStatus', { appointmentId: appointmentId }, function (isDone) {
                    if (isDone) {
                        button.hide(); // Hide the button if the appointment is already done
                    }
                });
            });

            $('.done-btn').click(function () {
                var button = $(this);
                var appointmentId = button.data('appointment-id');
                // Make the AJAX call to update the IsDone field
                $.post('/Patient/UpdateDoneStatus', { appointmentId: appointmentId }, function (data) {
                    button.hide(); // On success, hide the button
                });
            });
        });
    </script>
}
