@model IEnumerable<Hospital_Management.Areas.Doctor.Models.available>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DoctorAvailableProfileList";
    
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
<style>
    * {
        box-sizing: inherit;
    }

    img {
        max-width: 100%;
        height: auto;
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        font-family: 'Montserrat', sans-serif;
    }

    ul {
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        gap: 3rem;
    }

    li {
        list-style-type: none;
        position: relative;
        padding: 0.625rem 0 0.5rem;
    }

        li ul {
            flex-direction: column;
            position: absolute;
            background-color: white;
            align-items: flex-start;
            transition: all 0.5s ease;
            width: 20rem;
            right: -3rem;
            top: 4.5rem;
            border-radius: 0.325rem;
            gap: 0;
            padding: 1rem 0rem;
            opacity: 0;
            box-shadow: 0px 0px 100px rgba(20, 18, 18, 0.25);
            display: none;
        }

    ul li:hover > ul, ul li ul:hover {
        visibility: visible;
        opacity: 1;
        display: flex;
    }

    .material-icons-outlined {
        color: #888888;
        transition: all 0.3s ease-out;
    }

        .material-icons-outlined:hover {
            color: #ff9800;
            transform: scale(1.25) translateY(-4px);
            cursor: pointer;
        }

    .profile-icon {
        font-size: 35px;
        cursor: pointer;
        margin-left: auto;
    }

    .sub-item {
        width: 100%;
        display: flex;
        align-items: center;
        gap: 0.725rem;
        cursor: pointer;
        padding: 0.5rem 1.5rem;
    }

        .sub-item:hover {
            background-color: rgba(232, 232, 232, 0.4);
        }

            .sub-item:hover .material-icons-outlined {
                color: #ff9800;
                transform: scale(1.08) translateY(-2px);
                cursor: pointer;
            }

            .sub-item:hover p {
                color: #000;
                cursor: pointer;
            }

        .sub-item p {
            font-size: 0.85rem;
            color: #888888;
            font-weight: 500;
            margin: 0.4rem 0;
            flex: 1;
        }

    .title {
        display: flex;
        flex-direction: column;
    }

</style>

<title>Doctor Available Profile List</title>


<div class="container">
    <main role="main" class="pb-3">
        <nav>
            <div class="title">
                <h1>Doctor Available Profile List</h1>
                <br />
                <h4><b>Welcome,</b> @Context.Session.GetString("name")</h4>
            </div>
            <ul>
                <li>
                    <span class="material-icons-outlined profile-icon" id="profileIcon">person</span>
                    <ul>
                        @* <li class="sub-item"><span class="material-icons-outlined">grid_view</span><a asp-action="DoctorList" asp-controller="Doctor" asp-area="Doctor" asp-route-id="@ViewBag.User_Id"><p>Dashboard</p></a></li> *@
                        <li class="sub-item"><span class="material-icons-outlined">manage_accounts</span><a asp-action="EditDoctorProfile" asp-controller="Doctor" asp-area="Doctor" asp-route-id="@ViewBag.User_Id"><p>Update Profile</p></a></li>
                        <li class="sub-item"><span class="material-icons-outlined">refresh</span><a asp-action="resetpassword" asp-controller="Doctor" asp-area="Doctor"><p>Reset Password</p></a></li>
                        <li class="sub-item"><span class="material-icons-outlined">logout</span><a asp-action="Logout" asp-controller="User"><p>Logout</p></a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <p>
        <a asp-action="DoctorAvailableProfile" class="btn btn-outline-primary">Create New Availability</a>
        <a asp-action="AppoinmentList" asp-area="Doctor" asp-controller="Doctor" class="btn btn-outline-primary">Patient List</a>
        </p>

<table class="table table-striped">
    <thead>
        <tr>
            @* <th>@Html.DisplayNameFor(model => model.User_Id)</th> *@
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.STime)</th>
            <th>@Html.DisplayNameFor(model => model.ETime)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @* <td>@Html.DisplayFor(modelItem => item.User_Id)</td> *@
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.STime)</td>
                <td>@Html.DisplayFor(modelItem => item.ETime)</td>
                <td><button class="btn btn-danger delete-btn" data-id="@item.STime">Delete</button></td>
            </tr>
        }
    </tbody>
</table>
       
    </main>
</div>
<footer class="border-top footer text-muted fixed-bottom">
    <div class="container">
        &copy; 2024 - Hospital Management - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var profileIcon = document.getElementById("profileIcon");
            var dropdownMenu = profileIcon.nextElementSibling;

            profileIcon.addEventListener("click", function () {
                dropdownMenu.style.display = dropdownMenu.style.display === "none" ? "flex" : "none";
            });

            document.addEventListener("click", function (event) {
                if (!dropdownMenu.contains(event.target) && event.target !== profileIcon) {
                    dropdownMenu.style.display = "none";
                }
            });
        });

        $(document).ready(function () {
            $('.delete-btn').click(function () {
                var id = $(this).data('id');

                $.ajax({
                    url: '/Doctor/DeleteAvailability',
                    method: 'POST',
                    data: { STime: id },
                    success: function (response) {
                        alert('Item deleted successfully');
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        alert('Error deleting item');
                    }
                });
            });
        });
    </script>
}







