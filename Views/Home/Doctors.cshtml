@model IEnumerable<Hospital_Management.Areas.Doctor.Models.DoctorModel>

@{
    ViewData["Title"] = "Doctors";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }

        .doctor-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            border: none;
            border-radius: 15px;
            overflow: hidden;
        }

            .doctor-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

            .doctor-card .card-body {
                padding: 20px;
                background-color: #f8f9fa;
            }

            .doctor-card .card-title {
                font-size: 1.5rem;
                font-weight: 700;
                margin-bottom: 10px;
                color: #343a40;
            }

            .doctor-card .card-subtitle {
                font-size: 1.125rem;
                font-weight: 500;
                margin-bottom: 15px;
                color: #6c757d;
            }

            .doctor-card .card-text {
                font-size: 1rem;
                color: #495057;
            }

            .doctor-card img {
                max-width: 100px;
                max-height: 100px;
                margin-right: 20px;
                border-radius: 50%;
            }
            /* Additional cursor effect */
            .doctor-card:hover .card-body {
                background-color: #e9ecef;
                transition: background-color 0.2s ease;
            }

            .doctor-card:hover img {
                transform: scale(1.1);
                transition: transform 0.2s ease;

        .badge-primary {
            background-color: #007bff;
            font-size: 0.9rem;
            padding: 0.5em 1em;
            border-radius: 5px;
            color: white;
        }

        .container {
            padding-top: 20px;
        }

        h1 {
            margin-bottom: 20px;
            font-weight: 700;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-4">@ViewData["Title"]</h1>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card doctor-card mb-4 shadow-sm">
                        <div class="card-body d-flex align-items-center">
                            <img src="~/images/img/hero.png" alt="Doctor Image">
                            <div>
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Designation)</h6>
                            <p class="card-text"><strong>Phone:</strong> @Html.DisplayFor(modelItem => item.Phone)</p>
                            <p class="card-text"><strong>Gender:</strong> @Html.DisplayFor(modelItem => item.Gender)</p>
                            <span class="badge badge-primary">ID: @Html.DisplayFor(modelItem => item.User_Id)</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
